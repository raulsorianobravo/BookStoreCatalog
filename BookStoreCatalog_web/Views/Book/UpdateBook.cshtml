@model BookStoreCatalog_web.Models.DTO.BookModelUpdateDTO

@{
    ViewData["Title"] = "UpdateBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>UpdateBook</h1>
<form method="post" asp-action="UpdateBook">

    <div class="container border-3 p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <input hidden asp-for="Id" />
        
        <div class="row">
            <h2 class="text-info"> Update a Book</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Author</label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">idBook</label>
                <input asp-for="idBook" class="form-control" />
                <span asp-validation-for="idBook" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">AuthorURL</label>
                <input asp-for="AuthorUrl" class="form-control" />
                <span asp-validation-for="AuthorUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">TitleURL</label>
                <input asp-for="TitleUrl" class="form-control" />
                <span asp-validation-for="TitleUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Description</label>
                <input asp-for="DescriptionUrl" class="form-control" />
                <span asp-validation-for="DescriptionUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Book" asp-action="IndexBook" class="btn btn-success"> Back</a>
        </div>

    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
